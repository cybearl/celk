{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
        "ignoreUnknown": true,
        "includes": [
            "**",
            "!node_modules",
            "!.next",
            "!build",
            "!.vscode"
        ]
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on",
                "useSortedAttributes": "off",
                "useSortedKeys": "off",
                "useSortedProperties": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded",
            "bracketSpacing": true,
            "enabled": true,
            "jsxQuoteStyle": "double",
            "lineEnding": "lf",
            "lineWidth": 120,
            "quoteStyle": "double",
            "semicolons": "asNeeded",
            "trailingCommas": "all"
        },
        "jsxRuntime": "reactClassic"
    },
    "css": {
        "parser": {
            "tailwindDirectives": true
        }
    },
    "json": {
        "formatter": {
            "enabled": true
        }
    },
    "vcs": {
        "clientKind": "git",
        "enabled": true,
        "useIgnoreFile": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "noAutofocus": "off",
                "useButtonType": "off",
                "noStaticElementInteractions": "off"
            },
            "complexity": {
                "noForEach": "off"
            },
            "correctness": {
                "noEmptyPattern": "off",
                "noUnusedImports": "warn",
                "noUnusedVariables": "warn",
                "useExhaustiveDependencies": "warn"
            },
            "performance": {
                "noImgElement": "off"
            },
            "style": {
                "noNegationElse": "warn",
                "noNonNullAssertion": "off",
                "useFragmentSyntax": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "off",
                "noEmptyBlockStatements": "error",
                "noExplicitAny": "off",
                "noUnknownAtRules": "off",
                "useAwait": "warn",
                "noDocumentCookie": "off"
            }
        },
        "domains": {
            "next": "recommended",
            "react": "recommended"
        }
    }
}