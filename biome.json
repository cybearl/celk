{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on",
                "useSortedAttributes": "off",
                "useSortedKeys": "off",
                "useSortedProperties": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded",
            "bracketSpacing": true,
            "enabled": true,
            "jsxQuoteStyle": "double",
            "lineEnding": "lf",
            "lineWidth": 120,
            "quoteStyle": "double",
            "semicolons": "asNeeded",
            "trailingCommas": "all"
        },
        "jsxRuntime": "reactClassic"
    },
    "css": {
        "parser": {
            "tailwindDirectives": true
        }
    },
    "json": {
        "formatter": {
            "enabled": true
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "vcs": {
        "clientKind": "git",
        "enabled": true,
        "useIgnoreFile": true
    }
}
