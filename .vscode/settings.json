{
    "[css]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.biome": "explicit",
            "source.fixAll.eslint": "explicit",
            "source.organizeImports.biome": "explicit"
        },
        "editor.defaultFormatter": "biomejs.biome",
        "editor.formatOnSave": true
    },
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.fixAll": "always",
            "source.organizeImports": "always"
        },
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "[typescript][typescriptreact][javascript][css][json][jsonc]": {
        "editor.codeActionsOnSave": {
            "source.action.useSortedAttributes.biome": "explicit",
            "source.action.useSortedKeys.biome": "explicit",
            "source.action.useSortedProperties.biome": "explicit",
            "source.fixAll.biome": "explicit",
            "source.fixAll.eslint": "explicit",
            "source.organizeImports.biome": "explicit"
        },
        "editor.defaultFormatter": "biomejs.biome",
        "editor.formatOnSave": true
    },
    // Python black formatter
    "black-formatter.args": ["--line-length", "88"],
    // Exclude common build and cache directories from the file explorer
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        ".git": true,
        ".pytest_cache": true,
        "**/__pycache__": true,
        "**/.augment": true,
        "**/.classpath": true,
        "**/.codex": true,
        "**/.contentlayer": true,
        "**/.cursor": true,
        "**/.dart_tool": true,
        "**/.factorypath": true,
        "**/.gemini": true,
        "**/.gitattributes": true,
        "**/.idea": true,
        "**/.idx": true,
        "**/.junie": true,
        "**/.metadata": true,
        "**/.next": true,
        "**/.nyc_output": true,
        "**/.openhands": true,
        "**/.packages": true,
        "**/.project": true,
        "**/.pytest_cache": true,
        "**/.ruler": true,
        "**/.settings": true,
        "**/.windsurf": true,
        "**/.yarn": true,
        "**/.yarnrc": true,
        "**/blob_storage": true,
        "**/Cargo.lock": true,
        "**/contracts/src/cache": true,
        "**/contracts/src/deployments": true,
        "**/CVS": true,
        "**/next-env.d.ts": true,
        "**/pubspec.lock": true,
        "packages/contracts/cache": true,
        "**/.vscode": true
    },
    "javascript.preferences.importModuleSpecifier": "non-relative",
    "typescript.enablePromptUseWorkspaceTsdk": true,
    // Ensure to use alias import paths
    "typescript.preferences.importModuleSpecifier": "non-relative",
    // CMake
    "cmake.sourceDirectory": "${workspaceFolder}/packages/workers",
    "cmake.buildDirectory": "${workspaceFolder}/packages/workers/build"
}
